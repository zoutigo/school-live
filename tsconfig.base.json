{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@school-live/types": ["packages/types/src/index.ts"],
      "@school-live/config/*": ["packages/config/*"],
      "@school-live/ui": ["packages/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", ".expo"]
}
